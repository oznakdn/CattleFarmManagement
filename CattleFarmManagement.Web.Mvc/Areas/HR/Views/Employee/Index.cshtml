@model List<CattleFarmManagement.Shared.Dtos.EmployeeDtos.ListEmployeesDto>


<div class="col-12">
    <img src="~/img/employee.jpg" style="background-repeat:no-repeat; opacity:0.3; width:1500px; max-height:300px; margin-left:50px;" />
    <table class="table table-hover table-bordered mt-2">
        <thead class="thead-light">
            <tr>
                <th>Picture</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Job</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <img src="\pictures\employee\@item.Picture" class="img-thumbnail" style="max-width:50px;" />
                </td>
                <td>@item.Firstname</td>
                <td>@item.Lastname</td>
                <td>@item.Description</td>

                <td>
                    <a asp-action="GetDetail" asp-route-id="@item.ID" class="btn btn-success">Detail</a>
                    <a asp-action="GetContact" asp-route-id="@item.EmployeeContactId" class="btn btn-info">Contact</a>
                </td>
            </tr>
            }

        </tbody>

    </table>
</div>