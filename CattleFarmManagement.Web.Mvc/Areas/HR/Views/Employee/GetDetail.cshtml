@model CattleFarmManagement.Shared.Dtos.EmployeeDtos.DetailEmployeeDto

<div class="col-2"></div>

<div class="col-6">
    <div class="card" style="width: 45rem;">
        <div class="card-body">
            <h5 class="card-title">@Model.Firstname @Model.Lastname</h5>
            <p class="card-text">@Model.Description</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Date of birth: @Model.BirthDate</li>
            <li class="list-group-item">Gender: @Model.GenderType</li>
        </ul>
        <div class="card-body">
            <a href="#" class="btn btn-warning btn-block">Update</a>
            <a href="#" class="btn btn-danger btn-block">Delete</a>
        </div>
    </div>
</div>
<div class="col-2">
    <img src="\pictures\employee\@Model.Picture" class="card-img-top">
</div>

<div class="col-2"></div>

