@model List<CattleFarmManagement.Shared.Dtos.BullDtos.ListBullsDto>

<div class="col-12">
    <img src="~/img/BullListPic.jpg" style="background-repeat:no-repeat; opacity:0.3; width:1500px; max-height:300px; margin-left:50px;" />
    <table class="table table-hover table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Picture</th>
                <th>Tag Number</th>
                <th>Name</th>
                <th>Age</th>
                <th>Weight</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="\pictures\bull\@item.BullPictures.FirstOrDefault().PictureName" class="img-thumbnail" style="max-width:50px;" />
                    </td>
                    <td>@item.TagNumber</td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Weight</td>
                    <td>
                        <a asp-action="GetDetail" asp-route-id="@item.ID" class="btn btn-success">Details</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
