@model List<CattleFarmManagement.Shared.Dtos.CowDtos.ListCowsDto>



<div class="col-12">
    <img src="~/img/CowListPic.jpg" style="background-repeat:no-repeat; opacity:0.3; width:1500px; max-height:300px; margin-left:50px;" />
    <div class="col-12 mt-3">
        <table class="table table-hover table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Picture</th>
                    <th>Name</th>
                    <th>Tag Number</th>
                    <th>Age</th>
                    <th>Weight</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="\pictures\cow\@item.CowPictures.FirstOrDefault().PictureName" class="img-thumbnail" style="max-width:70px; border-radius:25%;" />
                        </td>
                        <td>@item.Name</td>
                        <td>@item.TagNumber</td>
                        <td>@item.Age</td>
                        <td>@item.Weight</td>
                        <td><a asp-action="GetDetail" asp-controller="Cow" asp-route-id="@item.Id" class="btn btn-success btn-block">Detail</a></td>
                    </tr>
                }

            </tbody>

        </table>
    </div>

</div>
