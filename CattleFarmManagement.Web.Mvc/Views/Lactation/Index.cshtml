@model List<CattleFarmManagement.Shared.Dtos.LactationDtos.ListLactationsDto>

<div class="col-12">
    <a asp-action="GetDetail" asp-controller="Cow" asp-route-id="@ViewBag.cowId" class="link-warning">Back to Cow Details</a>
    <a asp-action="Add" asp-route-id="@ViewBag.cowId" class="btn btn-primary btn-block mt-4"><span class="fas fa-plus"></span> New</a>
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Lactation Number</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Day</th>
                <th>Total Day</th>
                <th>Total Milk Quantity</th>
                <th>Average Milk Quantity</th>
                <th>Is Dry?</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.LactationNumber</td>
                    <td>@item.StartDate</td>
                    <td>@item.FinishDate</td>
                    <td>@item.LactationDay</td>
                    <td>@item.TotalDay</td>
                    <td>@item.TotalMilking</td>
                    <td>@item.AvarageDailyMilking</td>
                    <td>@item.IsDry</td>
                    <td><a class="btn btn-warning">Update</a></td>
                    <td><a class="btn btn-danger">Delete</a></td>

                </tr>
            }

        </tbody>
    </table>
</div>