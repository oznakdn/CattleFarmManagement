<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Nunito:400,600|Open+Sans:400,600,700" rel="stylesheet">
    <link rel="stylesheet" href="/css/easion.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.bundle.min.js"></script>
    <script src="/js/chart-js-config.js"></script>
    <title>Cattle Farm Management</title>
</head>

<body>

    <div class="dash">
        <div class="dash-nav dash-nav-dark">
            <header>
                <a href="#!" class="menu-toggle">
                    <i class="fas fa-bars"></i>
                </a>
                <a asp-action="Index" asp-controller="Home" class="easion-logo"><i class="fas fa-sun"></i> <span>CFM</span></a>
            </header>
                <nav class="dash-nav-list">
                    <a asp-action="Index" asp-controller="Home" class="dash-nav-item">
                        <i class="fas fa-home"></i> Dashboard
                    </a>
                    <!--Cow-->
                    <div class="dash-nav-dropdown">
                        <a href="#!" class="dash-nav-item dash-nav-dropdown-toggle">
                            <i class="fas fa-venus"></i> Cows
                        </a>
                        <div class="dash-nav-dropdown-menu">
                            <a asp-action="Index" asp-controller="Cow" class="dash-nav-dropdown-item"><span class="fas fa-list mr-2"></span>   List </a>
                            <a asp-action="Add" asp-controller="Cow" class="dash-nav-dropdown-item"><span class="fas fa-plus mr-2"></span>   New </a>
                        </div>
                    </div>
                    <!--Bull-->
                    <div class="dash-nav-dropdown ">
                        <a href="#!" class="dash-nav-item dash-nav-dropdown-toggle">
                            <i class="fas fa-mars"></i> Bulls
                        </a>
                        <div class="dash-nav-dropdown-menu">
                            <a asp-action="Index" asp-controller="Bull" class="dash-nav-dropdown-item"><span class="fas fa-list mr-2"></span>   List </a>
                            <a asp-action="Add" asp-controller="Bull" class="dash-nav-dropdown-item"><span class="fas fa-plus mr-2"></span> New</a>
                        </div>
                    </div>
                    <!--Born-->
                    <div class="dash-nav-dropdown">
                        <a href="#!" class="dash-nav-item dash-nav-dropdown-toggle">
                            <i class="fas fa-arrow-left"></i> Born
                        </a>
                        <div class="dash-nav-dropdown-menu">
                            <a href="blank.html" class="dash-nav-dropdown-item"><span class="fas fa-plus mr-2"></span> New</a>
                        </div>
                    </div>
                    <hr class="flex-md-shrink-1" />
                    <div class="dash-nav-dropdown">
                        <a href="#!" class="dash-nav-item dash-nav-dropdown-toggle">
                            <i class="fas fa-users"></i> Employee
                        </a>
                        <div class="dash-nav-dropdown-menu">
                            <a asp-area="HR" asp-action="Index" asp-controller="Employee" class="dash-nav-dropdown-item"><span class="fas fa-list mr-2"></span>   List </a>
                            <a asp-area="HR" asp-action="Add" asp-controller="Employee" class="dash-nav-dropdown-item"><span class="fas fa-plus mr-2"></span> New</a>
                        </div>
                    </div>
                </nav>
                <header class="dash-toolbar">
                    <a href="#!" class="menu-toggle">
                        <i class="fas fa-bars"></i>
                    </a>
                    <a href="#!" class="searchbox-toggle">
                        <i class="fas fa-search"></i>
                    </a>
                    <form class="searchbox" action="#!">
                        <a href="#!" class="searchbox-toggle"> <i class="fas fa-arrow-left"></i> </a>
                        <button type="submit" class="searchbox-submit"> <i class="fas fa-search"></i> </button>
                        <input type="text" class="searchbox-input" placeholder="type to search">
                    </form>
                    <div class="tools">
                        <a href="https://github.com/subet/easion" target="_blank" class="tools-item">
                            <i class="fab fa-github"></i>
                        </a>
                        <div class="dropdown tools-item">
                            <a href="#" class="" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-user"></i>
                            </a>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                                    <a class="dropdown-item text-black" asp-action="Logout" asp-controller="Account">Logout</a>
                                </div>
                            }

                        </div>
                    </div>
                </header>
        </div>
        <div class="dash-app">
            <main class="dash-content">
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-2"></div>
                        <div class="col-8">
                            @if (TempData["Error"] != null)
                            {
                                <div class="alert alert-danger" role="alert" style="text-align:center;">
                                    @TempData["Error"]
                                </div>}
                            @if (TempData["Info"] != null)
                            {
                                <div class="alert alert-success" role="alert" style="text-align:center;">
                                    @TempData["Info"]
                                </div>}
                        </div>

                        <div class="col-2"></div>

                    </div>
                    <div class="row dash-row">

                        @RenderBody()

                    </div>
                </div>
            </main>
        </div>
    </div>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        <script src="/js/easion.js"></script>
    </body>

</html>